<!-- ðŸŒ Simple Embedded Blog Section -->
<section id="blog">
  <h2>Latest Blog Posts</h2>
  <div class="blog-container" id="blogContainer">
    <!-- Blog posts will be injected here by JavaScript -->
  </div>
</section>

<style>
  /* --- Blog Section Styles --- */
  #blog {
    font-family: 'Arial', sans-serif;
    padding: 50px 20px;
    background: #f9f9f9;
    text-align: center;
  }

  #blog h2 {
    font-size: 2em;
    margin-bottom: 30px;
    color: #333;
  }

  .blog-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
  }

  .blog-post {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    max-width: 350px;
    padding: 20px;
    text-align: left;
    transition: transform 0.3s ease;
  }

  .blog-post:hover {
    transform: translateY(-5px);
  }

  .blog-post img {
    width: 100%;
    border-radius: 10px;
  }

  .blog-post h3 {
    margin: 15px 0 10px;
    color: #222;
  }

  .blog-post p {
    color: #555;
    font-size: 0.95em;
  }

  .read-more {
    display: inline-block;
    margin-top: 10px;
    color: #0077ff;
    text-decoration: none;
    font-weight: bold;
  }

  .read-more:hover {
    text-decoration: underline;
  }
</style>

<script>
  // --- Example Blog Data (You can replace this with your own) ---
  const blogPosts = [
    {
      title: "How to Boost Your Productivity",
      image: "https://via.placeholder.com/350x200",
      excerpt: "Learn practical tips and tools to help you stay focused and achieve more each day.",
      link: "#"
    },
    {
      title: "Designing for the Web in 2025",
      image: "https://via.placeholder.com/350x200",
      excerpt: "Explore the latest trends shaping modern web design and UX best practices.",
      link: "#"
    },
    {
      title: "Getting Started with JavaScript",
      image: "https://via.placeholder.com/350x200",
      excerpt: "A beginner-friendly guide to understanding the core concepts of JavaScript.",
      link: "#"
    }
  ];

  // --- Dynamically Insert Blog Posts ---
  const blogContainer = document.getElementById('blogContainer');

  blogPosts.forEach(post => {
    const postDiv = document.createElement('div');
    postDiv.classList.add('blog-post');
    postDiv.innerHTML = `
      <img src="${post.image}" alt="${post.title}">
      <h3>${post.title}</h3>
      <p>${post.excerpt}</p>
      <a class="read-more" href="${post.link}">Read More â†’</a>
    `;
    blogContainer.appendChild(postDiv);
  });
</script>

  <footer id="contact" class="site-footer">
